<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight">

    <TextView
        android:id="@+id/fave_movie_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        android:textSize="16sp"
        android:text="Favourites Page"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_fave_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="32dp"
        android:paddingLeft="16dp"/>

    <TextView
        android:id="@+id/tv_error_message_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/display_error"
        android:textSize="20sp"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/fave_empty_page_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="32dp"
        android:paddingLeft="8dp"
        android:text="@string/display_empty_page"
        android:textSize="20sp"
        android:visibility="visible"/>

    <ProgressBar
        android:id="@+id/fave_loading_indicator"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:visibility="invisible"/>

</FrameLayout>